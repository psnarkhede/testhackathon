{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Project API"
  },
  "paths": {
    "/hello": {
      "get": {
        "summary": "sayHello",
        "responses": {
          "200": {
            "description": "A greeting message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "Hello, World!"
                }
              }
            }
          }
        }
      }
    }
  }
}
