{
  "openapi": "3.0.0",
  "info": {
    "title": "Booking API",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Get Home",
        "operationId": "getHome",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HomeResponseDto"
                },
                "examples": {
                  "example1": {
                    "value": { "message": "Welcome to the Booking API!" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/bookings": {
      "post": {
        "summary": "Create Booking",
        "operationId": "createBooking",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBookingDto"
              },
              "examples": {
                "example1": {
                  "value": {
                    "userId": "user123",
                    "roomId": "room456",
                    "date": "2024-07-01"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Booking Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookingResponseDto"
                },
                "examples": {
                  "example1": {
                    "value": {
                      "bookingId": "booking789",
                      "status": "confirmed"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HomeResponseDto": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "required": ["message"]
      },
      "CreateBookingDto": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "roomId": { "type": "string" },
          "date": { "type": "string", "format": "date" }
        },
        "required": ["userId", "roomId", "date"]
      },
      "BookingResponseDto": {
        "type": "object",
        "properties": {
          "bookingId": { "type": "string" },
          "status": { "type": "string" }
        },
        "required": ["bookingId", "status"]
      }
    }
  }
}
